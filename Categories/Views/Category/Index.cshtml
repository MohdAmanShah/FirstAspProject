@model IEnumerable<Category>
@{
	ViewData["Title"] = "Categories";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Add" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> &nbsp Add New Category
			</a>
		</div>
	</div>
</div>

<table class="table">
	<thead>
		<tr class="table-dark">
			<th width="10%">
				Order
			</th>
			<th width="50%">
				Name
			</th>
			<th width="10%"> </th>
			<th width="10%"> </th>
		</tr>

	</thead>
	<tbody>
		@foreach (var obj in Model)
		{
			<tr class="table-dark">
				<td width="10%">
					@obj.DisplayOrder
				</td>
				<td width="50%">
					@obj.Name
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
							<i class="bi bi-pencil-square"></i> &nbsp Edit
						</a>
					</div>
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">
							<i class="bi bi-trash3-fill"></i> &nbsp	Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>